<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="6dp"
    android:elevation="6dp"
    app:cardBackgroundColor="@color/white"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginTop="25dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/uimg1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/ic_launcher"
            app:civ_border_color="@color/black"
            app:civ_border_width="2dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/unametext"
            android:text="Student Name"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#000"
            android:layout_toRightOf="@+id/uimg1"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ucontacttext"
            android:text="Contact Number"
            android:textSize="15sp"
            android:textColor="#000"
            android:layout_toRightOf="@+id/uimg1"
            android:layout_below="@+id/unametext"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/uemailtext"
            android:text="Email"
            android:textSize="15sp"
            android:textColor="#000"
            android:layout_toRightOf="@+id/uimg1"
            android:layout_below="@+id/ucontacttext"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/utypetext"
            android:text="Type"
            android:textSize="15sp"
            android:textColor="#000"
            android:layout_toRightOf="@+id/uimg1"
            android:layout_below="@+id/uemailtext"
            android:layout_marginLeft="10dp"
            />
        <!--            android:layout_centerVerticle = "true"-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/utypetext"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnEdit"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="Edit"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Delete"
            android:textAllCaps="false" />
    </LinearLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>