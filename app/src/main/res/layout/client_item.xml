<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    app:cardCornerRadius="6dp"
    android:elevation:"6dp"
    app:cardUseCompatPadding="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/ic_launcher"
            android:layout_centerVertical="true"
            android:id="@+id/c_img1"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/black"/>
        <TextView
            android:id="@+id/c_txt_DriverName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/c_img1"
            android:text="Driver's Name"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/c_txt_ContactNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/c_txt_DriverName"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/c_img1"
            android:text="Contact Number"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/c_txt_VehicleNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/c_txt_ContactNo"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/c_img1"
            android:text="Vehicle Number"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/c_txt_TaxiId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/c_txt_VehicleNo"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/c_img1"
            android:text="Taxi Id"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/c_txt_AvaArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/c_txt_TaxiId"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/c_img1"
            android:text="Available Area"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/c_txt_PerKm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/c_txt_AvaArea"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/c_img1"
            android:text="Price per Km"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>